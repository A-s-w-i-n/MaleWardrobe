   <main id="main" class="main">
     <form action="/bannerAdd" onsubmit="" oninput="" method="post" name="" enctype="multipart/form-data">
          <h4>Add Banner</h4>
          <div class="form-row">
            <div class="row">
             
                <div class="col ">
                  <label for="">Banner Name</label>
                  <input type="text" class="form-control" name="bannername" id="bannername" placeholder="bannername">
                </div>
                <p class="text-danger"></p>
                <div class="col ">
                  <label for="">Banner subName</label>
                  <input type="text" class="form-control" name="subname" id="subname" placeholder="subname">
                </div>
                <p class="text-danger"></p>
        </div>
        <div class="row">
                <div class="col ">
                  <label for="">Discription</label>
                  <input type="text" class="form-control" name="discription" id="discription" placeholder="discription">
                </div>
                <p class="text-danger"></p>
                <div class="col">
                  <label for="">Banner Image</label>
                  <input class="form-control" multiple type="file" id="Bannerimage" name="image" accept="image/*"
                    placeholder="image">
               
                <p class="text-danger"></p>
              
              </div>
              </div>
               </form>


              <button type="submit" class="btn btn-primary">Add Banner</button>
            
<table id="myTable" class="table align-middle mb-0 bg-white mt-5 pt-5">
  <thead class="bg-light">
    
    <br>
    
 
      <th>Image</th>
      <th>Banner Name </th>
      <th>Banner Sub name</th>
      
       <th>Banner Discription</th>
       <th>Status</th>
      
       <th>Action</th>
      
    </tr>
  </thead>
  <tbody>

    
     {{#each newBanner}}
    
    <tr>
      <td>
        <div class="d-flex align-items-center">
          <div class="ms-3">
            <img style="width: 6rem;" src="bannerImages/{{image}}" alt="" >
            
          </div>
        </div>
      </td>
     
      
     <td>
        <p class="text-muted mb-0">{{bannername}}</p>
      </td>
      
       <td>
        <p class="text-muted mb-0">{{subname}}</p>
      </td>
       <td>
        <p class="text-muted mb-0">{{discription}}</p>
      </td>
       <td>
        <p class="text-muted mb-0">{{status}}</p>
      </td>
      {{#if status}}
      <td><a href="/bannerDesable/{{_id}}"><button type="button" class="btn btn-primary">Desable</button></a></td>
      {{else}}
       <td><a href="/bannerEnable/{{_id}}"><button type="button" class="btn btn-primary">Enable</button></a></td>
{{/if}}
    </tr>
    {{/each}}
  </tbody>
 
</table> 
 

