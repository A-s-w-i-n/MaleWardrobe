      </td>
    
     <td>
        <p class="text-muted mb-0">{{date}}</p>
      </td>
       <td>
        <p class="text-muted mb-0">{{paymentMethod}}</p>
      </td>
       <td>
        <p class="text-muted mb-0">{{grandTotal}}</p>
      </td>
       <td>
        <p class="text-muted mb-0">{{deliveryDate}}</p>
      </td>
       <td>
        <p class="text-muted mb-0">{{orderStatus}}</p>
      </td>
      <td><a href="/orderProductDetail/{{orderedUser}}"><button class="btn btn-primary">Details</button></a></td>

      
      
    
     
    </tr>
   {{/each}}
