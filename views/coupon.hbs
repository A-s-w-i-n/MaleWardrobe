<form action="/couponAdd"  method="post" >
<div class="row ">
  <div class="col-md">
      <label for="">Coupon Code</label>
    <div class="form-floating">
      <input type="text" class="form-control" name="couponCode" id="floatingInputGrid" placeholder="name@example.com" value="">
    </div>
  </div>
  <div class="col-md">
      <label>Discount Value</label>
     <div class="form-floating">
      <input type="number" class="form-control" name="discountPrice" id="floatingInputGrid" placeholder="name@example.com" value="">
   
      
    </div>
  </div>
</div>
<div class="row ">
  <div class="col-md">
      <label for="">Create Date</label>
    <div class="form-floating">
      <input type="date" class="form-control" name="createDate" id="floatingInputGrid" placeholder="name@example.com" value="">
    </div>
  </div>
  <div class="col-md">
      <label>Enter Minimum Purchase </label>
     <div class="form-floating">
      <input type="number" class="form-control" name="MinimumPrice" id="floatingInputGrid" placeholder="name@example.com" value="">
   
      
    </div>
  </div>
</div>
<div class="row ">
  <div class="col-md">
      <label for="">Expire Date</label>
    <div class="form-floating">
      <input type="date" class="form-control" name="expireDate" id="floatingInputGrid" placeholder="name@example.com" value="">
    </div>
  </div>
  <div class="col-md">
      <label for="">Discount Type</label>
    <div class="form-floating">
      <input type="text" class="form-control" name="discountType" id="floatingInputGrid" placeholder="name@example.com" value="">
    </div>
  </div>
    </div>


<br>

<button type="submit" class="btn btn-primary">Add Coupon</button>
<p class="text-danger">{{couponerr}}</p>
</form>
<br>
<table id="myTable" class="table align-middle mb-0 bg-white mt-5 pt-5">
  <thead class="bg-light">
    
    <br>
    
 
   
      <th>Coupon Code </th>
      <th>Discount type</th>
      
       <th>Discount Price</th>
       <th>Min Purchase</th>
       <th>createDate</th>
       <th>Expire Date</th>
       <th>Status</th>
      
       <th>Action</th>
      
    </tr>
  </thead>
  <tbody>

    
     {{#each couponData}}
    
    <tr>
     <td>
        <p class="text-muted mb-0">{{couponCode}}</p>
      </td>
       <td>
        <p class="text-muted mb-0">{{discountType}}</p>
      </td>
       <td>
