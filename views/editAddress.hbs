<div class="container rounded bg-white mt-5">
        <div class="row">
            <form action="/updatedAddress" method="post">
            
            <div class="col-md-8">
                <div class="p-3 py-5">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                       
                        <h6 class="text-right">Edit Address</h6>
                    </div>
                    {{#each  adressEditExt}}

                    {{#each this.address}}

                    
                    

                    <div class="row mt-3">
                        <div class="col-md-6"><input type="text" class="form-control" name="housename" placeholder="" value="{{name}}"></div>
                        
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><input type="text" class="form-control" name="state" placeholder="" value="{{state}}"></div>
                        
                    </div>
                    <div class="row mt-3">
                        <div class="col-md-6"><input type="text" class="form-control" name="city" placeholder="" value="{{city}}"></div>
                        
                    </div>
                     <div class="row mt-3">
                        <div class="col-md-6"><input type="text" class="form-control" name="country" placeholder="" value="{{country}}"></div>
                        
                    </div>
                     <div class="row mt-3">
                        <div class="col-md-6"><input type="text" class="form-control" name="postalcode" placeholder="" value="{{postalcode}}"></div>
                        
                        {{/each}}
                         {{/each}}
                        
                    </div>
                    <div class="mt-5 text-right"><button  class="btn btn-primary profile-button " type="submit">Save Address</button></div>
                </div>

            </div>

            </form>
        </div>
    </div>
