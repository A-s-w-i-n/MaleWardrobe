<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <form action="/userhomepage" name="submission" oninput="clearform()"  onsubmit="return loginval()"  method="post" class="login100-form  p-l-55 p-r-55 p-t-178">
                    <span class="login100-form-title">
                        Log In
                    </span>

                    <div class="wrap-input100  m-b-16" data-validate="Please enter username">
                        <input class="input100" id="name" type="text" name="name" placeholder="name">
                        <span class="focus-input100"></span>
                    </div>
                    <p class="text-danger"></p>



                    <div class="wrap-input100 " data-validate="Please enter password">
                        <input class="input100" id="password" type="password" name="password" placeholder=" password">
                        <span class="focus-input100"></span>
                    </div>
                    <p class="text-danger"></p>
                    <br>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Log in
                        </button>
                    </div>
                    <br>
                    <p class="text-danger text-center">{{msg}}</p>
                    	<div class="flex-col-c  p-b-40">
                        <br>
						<span class="txt1 p-b-9">
							create new account?
						</span>


						<a href="/signup" class="txt3">
							Sign UP
						</a>
                        <br>
                        <a href="/userhomeotp">Login with<span style="color: green;">OTP</span></a>
					</div>


                </form>
            </div>
        </div>
    </div>


    <!--===============================================================================================-->
